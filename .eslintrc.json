{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle":"off",
        "linebreak-style": ["error", "windows"],
        "no-multiple-empty-lines": ["error", { "max": 4, "maxEOF": 1 }]
    }
}